<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Remove "NoActionBar" for actionbar-->
    <style name="Base.Theme.TransparentStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="Theme.TransparentStatusBar" parent="Base.Theme.TransparentStatusBar" />

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">#fff</item>
    </style>
</resources>